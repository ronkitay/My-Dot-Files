environment {
    terminal "iTerm"
    textEditor "Visual Studio Code"
}

behavior {
    table {
        defaults {
            showHiddenFiles true
        }
        
    }
}

keyBindings {
    "Control+Command+Option+i" "core.ext.terminal.open"
    
    "Ctrl+1" {
        id "core.ordering"
        ordering "name"
    }
    "Ctrl+2" {
        id "core.ordering"
        ordering "modified"
    }
    "F2" "core.rename"
    "Shift+F2" "core.move"
    "Cmd+Backspace" "core.delete"
}

etty {
    fonts {
        normal [ "MesloLGS NF" 12 ]
    }
}

